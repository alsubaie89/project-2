

<div class="container">
<h1>Cars Advertised</h1>


<div class="row">
<div class="col-12 d-flex flex-row justify-content-around ">
    <div>
    <img class="img-thumbnail" src=<%= @car.img %> height=300 width=300> <br>
    </div>
    <div>
    <p>

    <div class="img-thumbnail">
      <strong>Make:</strong>
      <%= @car.make %>
    </p>

    <p>
      <strong>Model:</strong>
      <%= @car.model %>
    </p>

    <p>
      <strong>Year:</strong>
      <%= @car.year %>
    </p>

    <p>
      <strong>Color:</strong>
      <%= @car.color %>
    </p>

    <p>
      <strong>Mileage:</strong>
      <%= @car.mileage %>
    </p>

    <p>
    <strong>Contact on:</strong>
    <%= @car.phone %>
    </p>
    </div>

    <% if current_user.id == @car.user_id %>

    <%= link_to 'Edit', edit_car_path(@car),:class=> "btn btn-secondary" %> |
    <%= link_to "Delete", car_path(@car), method: :delete , data: {confirm: "Confirm 'DELETE'?"} ,:class=> "btn btn-secondary"%> |

    <% end %>

    <%= link_to 'Back', cars_path ,:class=> "btn btn-secondary" %> 
    </div>

</div>
</div>
</div>
